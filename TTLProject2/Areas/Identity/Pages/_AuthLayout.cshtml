@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="container-lg" style="margin-bottom:10%;">
<div class="row justify-content-center">
    <div class="col-5 mt-5">
        <div class="card login-logout-card">
                <div class="card-header" style="">
                    <ul class="nav nav-tabs card-header-tabs justify-content-center " style="height:50px;line-height:50px;background-color:#1bb6ee;">
                    <li class="nav-item text-center lh-sm p-2  ">
                            <a class=" text-decoration-none text-black fs-4 fw-bold text-white" href="/Identity/Account/Login">Đăng Nhập </a>
                    </li>
                    <li class="nav-item text-center lh-sm p-2 text-black">
                            <a class="text-decoration-none text-black fs-4 fw-bold text-white" href="/Identity/Account/Register">Đăng Kí</a>
                    </li>
                </ul>
            </div>
                <div class="card-body layout_img">
                <div class="justify-content-center">
                    <div class="col-12 my-4">
                        @RenderBody()
                    </div>
                </div>
               </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}
