        </form>
    </li> *@
}
else
{
    
    <li class="nav-item">
            <i class="fa-solid fa-user text-white fs-5" style="text-align:center">
                <a class="nav-link text-dark fs-6 text-white" style="font-family:'Times New Roman', Times, serif" id="login" asp-area="Identity" asp-page="/Account/Login">ĐĂNG NHẬP</a>
            </i>
    </li>
